<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ecommerce.repository.mybatis.MemberMapper">

	<resultMap type="Member" id="MemberResult">
		<id column="member_id" property="memberId" />
		<result column="account" property="account" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="birth_year" property="birthYear" />
		<result column="birth_month" property="birthMonth" />
		<result column="birth_day" property="birthDay" />
		<result column="email" property="email" />
		<result column="address" property="address" />
		<result column="create_date" property="createDate" />
		<result column="update_date" property="updateDate" />
	</resultMap>

	<select id="selectUserLogin" parameterType="String"
		resultMap="MemberResult">
		SELECT account, password FROM user WHERE
		account = #{userId}
		AND password = #{password}
	</select>

</mapper>