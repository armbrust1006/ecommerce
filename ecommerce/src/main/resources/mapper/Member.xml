<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="kr.co.ecommerce.repository.mybatis.MemberMapper">

	<resultMap type="Member" id="MemberResult">
		<id column="member_id" property="memberId" />
		<result column="account" property="account" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="Birthday_year" property="birthdayYear" />
		<result column="birthday_month" property="birthdayMonth" />
		<result column="birthday_day" property="birthdayDate" />
		<result column="email" property="email" />
		<result column="address" property="address" />
		<result column="create_date" property="createDate" />
		<result column="update_date" property="updateDate" />
	</resultMap>

	<select id="selectUserLogin" parameterType="String"
		resultMap="MemberResult">
		SELECT
			account, password
		FROM
			user
		WHERE
			account = #{userId}
			AND	password = #{password}
	</select>

	<insert id="insertMemberInfo" useGeneratedKeys="true"
		keyProperty="memberId">
		INSERT INTO member (
			account,
			password,
			name,
			birthday_year,
			birthday_month,
			birthday_date,
			email,
			address,
			create_date
		)
		VALUES (
			#{account},
			#{password},
			#{name},
			#{birthdayYear},
			#{birthdayMonth},
			#{birthdayDate},
			#{email},
			#{address},
			#{createDate}
		)
	</insert>

</mapper>